<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#03A9F4</item>
        <item name="colorPrimaryDark">#0288D1</item>
        <item name="colorAccent">#536DFE</item>
        <item name="android:textColorPrimary">@color/dark</item>
        <item name="android:textColorSecondary">@color/light</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
    </style>

    <style name="CircularTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">#03A9F4</item>
    </style>

    <style name="HorizontalTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">#0288D1</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
